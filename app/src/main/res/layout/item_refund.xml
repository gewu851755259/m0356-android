<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="#ffffff"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="10dp">
    <TextView
        android:id="@+id/tv_refund_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#727272"
        tools:text="申请时间 2016-08-02 11:48:08"/>

    <TextView
        android:id="@+id/tv_refund_good_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_marginTop="3dp"
        tools:text="商品名称：测试商品"/>
    <TextView
        android:id="@+id/tv_refund_buyer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#727272"
        android:text="买家会员名：test"/>

    <TextView
        android:id="@+id/tv_refund_seller_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#727272"
        android:text="处理状态：同意"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_refund_admin_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#727272"
            android:text="平台确认：已完成"/>
        <Button
            android:id="@+id/btn_receive"
            android:layout_width="55dp"
            android:layout_height="30dp"
            android:text="收货"
            android:textSize="10sp"
            android:textColor="#ffffff"
            android:layout_alignParentRight="true"
            android:background="@drawable/shop_btn_green"/>
    </RelativeLayout>

</LinearLayout>
