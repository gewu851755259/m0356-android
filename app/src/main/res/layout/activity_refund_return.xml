<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@color/nc_title_bg"
                    android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:gravity="center_vertical"
            android:src="@drawable/nc_icon_back" />

        <TextView
            android:id="@+id/tvCommonTitle"
            style="@style/NCTitleText"
            android:text="交易提示" />

        <TextView
            android:id="@+id/tvCommonTitleBorder"
            style="@style/NCLine"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="@drawable/nc_bg_border_bottom"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <Button
                    android:id="@+id/btn_refund_lock"
                    style="@style/NCTabButton"
                    android:text="售前退款"
                    android:textSize="14dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <Button
                    android:id="@+id/btn_refund"
                    style="@style/NCTabButton"
                    android:text="售后退款"
                    android:textSize="14dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <Button
                    android:id="@+id/btn_return_lock"
                    style="@style/NCTabButton"
                    android:text="售前退货"
                    android:textSize="14dp"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <Button
                    android:id="@+id/btn_return"
                    style="@style/NCTabButton"
                    android:text="售后退货"
                    android:textSize="14dp"/>
            </LinearLayout>
        </LinearLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_refund_return"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>

</LinearLayout>