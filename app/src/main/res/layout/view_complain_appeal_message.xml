<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:background="#ffffff"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:textColor="#000000"
        android:text="申诉信息"
        android:background="#F5F5F5"
        android:gravity="center_vertical"
        android:paddingLeft="8dp"/>

    <View
        style="@style/myLine"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="申诉时间："/>
        <TextView
            android:id="@+id/tv_complain_appeal_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="2017-01-12 11:36:31"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="申诉内容："/>
        <TextView
            android:id="@+id/tv_complain_appeal_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="android测试申诉详情"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="申诉证据："/>
        <TextView
            android:id="@+id/tv_complain_appeal_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="申诉证据： 暂无图片"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:textColor="#000000"
        android:background="#F5F5F5"
        android:gravity="center_vertical"
        android:paddingLeft="8dp"
        android:text="对话详情"/>

    <LinearLayout
        android:id="@+id/ll_complain_appeal_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="对话记录："/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/et_complain_appeal_send_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发布对话："/>
        <EditText
            android:id="@+id/et_complain_appeal_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_complain_appeal_btn_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_complain_appeal_submit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shop_btn_green"
            android:text="发布对话"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textColor="#ffffff"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btn_complain_appeal_refresh"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shop_btn_green"
            android:text="刷新对话"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textColor="#ffffff"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btn_complain_appeal_handle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shop_btn_green"
            android:text="提交仲裁"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textColor="#ffffff"
            android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>