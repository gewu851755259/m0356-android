<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:background="#ffffff"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <View
        android:background="#E0E0E0"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_store_label"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                android:layout_width="120dp"
                android:adjustViewBounds="true"
                android:background="#E0E0E0"
                tools:src="@drawable/userbg"
                android:padding="0.5dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="40dp"
                android:layout_height="40dp"/>
            <TextView
                android:layout_marginTop="15dp"
                android:textColor="#232326"
                android:id="@+id/tv_store_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_store_label"
                tools:text="店铺名称"/>
            <TextView
                android:id="@+id/tv_fav_count"
                android:textColor="#9EA0A2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_store_name"
                android:layout_alignLeft="@id/tv_store_name"
                android:textSize="15sp"
                android:layout_marginTop="8dp"
                tools:text="100人收藏"/>
            
<!--            <TextView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="综合评分"
                android:layout_toRightOf="@id/tv_fav_count"
                android:layout_alignBaseline="@id/tv_fav_count"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/tv_mark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FF6A6A"
                android:layout_toRightOf="@id/tv"
                android:layout_alignBaseline="@id/tv"
                tools:text="9.8"/>-->

            <Button
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:background="@drawable/btn_search_store"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_margin="15dp"
                android:textColor="#F8BEBE"
                android:text="进店"
                android:textSize="15sp"
                android:id="@+id/btn_enter"/>

        </RelativeLayout>
        <LinearLayout
            android:id="@+id/ll_img_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/ll1"
                android:layout_weight="1"
                android:layout_width="0dp"
                tools:background="#00ff00"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/iv1"
                    android:layout_width="wrap_content"
                    android:scaleType="fitXY"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv1"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll2"
                android:layout_weight="1"
                android:layout_width="0dp"
                tools:background="#0000ff"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/iv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv2"
                    android:textColor="#000000"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll3"
                android:layout_weight="1"
                android:layout_width="0dp"
                tools:background="#ff0000"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/iv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv3"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#000000"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:background="#E0E0E0"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

</LinearLayout>