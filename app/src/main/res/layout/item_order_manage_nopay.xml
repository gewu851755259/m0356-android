        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_order_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:textColor="#A5A5A5"
            android:textSize="11sp"
            tools:text="共2件商品.合计218.00元.含运费0.00元"/>
        <TextView
            android:id="@+id/tv_order_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:textColor="#A5A5A5"
            android:textSize="11sp"
            tools:text="货到付款"/>
        </FrameLayout>

        <RelativeLayout
            android:id="@+id/rl_btn_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/btn_order_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/bg_order_cancel_btn"
                android:text="取消订单"
                android:focusable="false"
                android:textColor="#D0D0D0"
                android:textSize="11sp"/>

            <Button
                android:id="@+id/btn_order_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@id/btn_order_cancel"
                android:background="@drawable/bg_order_send_btn"
                android:text="发货"
                android:focusable="false"
                android:textColor="#ffffff"
                android:textSize="11sp"/>
            <TextView
                android:id="@+id/tv_ziti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                tools:text="取货方式：自提"/>
