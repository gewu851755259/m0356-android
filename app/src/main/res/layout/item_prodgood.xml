<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:background="#FFFFFF"
                android:paddingBottom="8dp">

    <FrameLayout
        android:id="@+id/f2"
        android:layout_width="120dp"
        android:layout_height="80dp">

        <ImageView
            android:id="@+id/iv_gift_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:paddingRight="5dp"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/tv_gift_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="10dp"
            android:text="代金券"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:visibility="gone"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_gift_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:paddingBottom="18dp"
                android:text="20"
                android:textColor="#ffffff"
                android:textSize="22sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/tv_gift_amount"
                android:layout_toLeftOf="@id/tv_gift_amount"
                android:text="￥"
                android:textColor="#ffffff"
                android:textSize="10sp"/>

        </RelativeLayout>
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/f2">


        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_gift_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_weight="1"
                android:text="测试"
                android:textColor="#F18248"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/tv_gift_level"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:background="@drawable/shape_red"
                android:gravity="center"
                android:text="V1"
                android:textColor="#ffffff"
                android:textSize="10sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_gift_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll1"
            android:layout_marginTop="10dp"
            android:text="原价：14.00元"
            android:textColor="#555551"
            android:textSize="10sp"/>

        <TextView
            android:id="@+id/tv_gift_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_gift_price"
            android:layout_marginTop="3dp"
            android:text="兑换积分：100"
            android:textColor="#555551"
            android:textSize="10sp"/>

        <TextView
            android:id="@+id/tv_gift_limit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_gift_point"
            android:layout_marginTop="3dp"
            android:text="限量兑换：此礼品每人限兑一个"
            android:textColor="#555551"
            android:textSize="10sp"/>

        <Button
            android:id="@+id/btn_gift"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="8dp"
            android:background="@drawable/shape_red_btn"
            android:text="立即兑换"
            android:textColor="#ffffff"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_gift_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_toRightOf="@id/f2"
        android:text="有效期"
        android:textSize="10sp"
        android:visibility="gone"/>
</RelativeLayout>