<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:background="#ffffff"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">

        <TextView
            android:id="@+id/tv_goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:maxEms="15"
            android:ellipsize="end"
            android:textColor="#000000"
            tools:text="诺基亚(NOKIA) 1050 (RM-1120) 移动联通2G手机 黑色 联通联通2G版"/>

        <LinearLayout
            android:id="@+id/ll_consult"
            android:layout_below="@+id/tv_goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="咨询内容："/>

            <TextView
                android:id="@+id/tv_consult_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:maxEms="15"
                android:ellipsize="end"
                tools:text="联通联通2G版是什么意思？移动不能用？"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_reply"
            android:layout_below="@+id/ll_consult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="客服回复："/>

            <TextView
                android:id="@+id/tv_consult_reply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:maxEms="15"
                android:ellipsize="end"
                tools:text="移动联通2G 移动可以用"/>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>