<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
              android:background="#ffffff"
                android:padding="5dp"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@color/nc_title_bg"
                    android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:gravity="center_vertical"
            android:src="@drawable/nc_icon_back" />

        <TextView
            android:id="@+id/tvCommonTitle"
            style="@style/NCTitleText"
            android:text="咨询详情" />

        <TextView
            android:id="@+id/tvCommonTitleBorder"
            style="@style/NCLine"
            android:layout_alignParentBottom="true" />

        <TextView
            android:id="@+id/tv_drop"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#000000"
            android:clickable="true"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:text="删除"/>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv1"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品名称："/>

        <TextView
            android:id="@+id/tv_goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Apple/苹果 iPhone 7 plus 全网通4G手机 原封国行 黑色 256G"/>
    </LinearLayout>


    <View
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        style="@style/myLine"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="咨询用户："/>
        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="用户"/>

    </LinearLayout>

    <View
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        style="@style/myLine"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="咨询时间："/>
        <TextView
            android:id="@+id/tv_consult_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="2017-1-10"/>

    </LinearLayout>

    <View
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        style="@style/myLine"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="咨询内容："/>
        <TextView
            android:id="@+id/tv_consult_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="联通联通2G版是什么意思？移动不能用？"/>

    </LinearLayout>

    <View
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        style="@style/myLine"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_reply"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="客服回复："/>
            <TextView
                android:id="@+id/tv_reply_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="移动联通2G 移动可以用(2016-03-01 13:47:07)"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_no_reply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="客服回复："/>

            <EditText
                android:id="@+id/et_reply_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btn_reply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:layout_gravity="right"
                android:background="@drawable/shop_btn_green"
                android:text="回复"/>

        </LinearLayout>


    </FrameLayout>



</LinearLayout>